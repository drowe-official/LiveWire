<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/frag"
    android:id="@+id/settingspage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/title_preferences">

        </TextView>

        <Button
            android:id="@+id/notipref"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/notifications"
            android:text="@string/notifications_options"
            android:onClick="jump_To_Noti_Pref"/>

        <Button
            android:id="@+id/feedpref"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/home_icon"
            android:text="@string/feed_options"
            android:onClick="jump_to_feed_pref"/>
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_plugins">
        </TextView>

        <Button
            android:id="@+id/spotifyplug"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/spotify"
            android:onClick="spotifyplug"
            android:text="@string/spotify_button" />

        <Button
            android:id="@+id/faceplug"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/fui_ic_facebook_white_22dp"
            android:onClick="faceplug"
            android:text="@string/facebook_button" />

        <Button
            android:id="@+id/localplug"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/local"
            android:onClick="locationallow"
            android:text="@string/location_button" />
    </LinearLayout>


</ScrollView>
